extends layout

block content
	.content
		.projects
			.button
				a#newProjectButton(href='#').
					Add new project
			ul#projectsList
		.pictures
			form#addFileForm(action='gallery/uploadPicture',  method='POST', enctype='multipart/form-data', accept='video/*,image/*')
				input#addPictures(type='file', name='pictures', multiple)
				br
				each galleryTag in galleryTags
					label(for=galleryTag)= galleryTag
					input(id=galleryTag, type='checkbox')
					br
				br
				input#submit(type='submit', value='Submit')
			.pictureListTable
				.pictureListHead
					p(class=['pictureTableCell', 'secondColumn', 'filename']) Name
					p(class=['pictureTableCell', 'thirdColumn', 'filename']) Project
					p(class=['pictureTableCell', 'fourthColumn', 'filename']) Category
					p(class=['pictureTableCell', 'fifthColumn', 'filename']) System tag
				.picturesListContainer
	script(type='application/javascript').
		$(document).ready(tSquareGalleryModule.init(!{JSON.stringify(systemTags)}, !{JSON.stringify(galleryTags)}));
